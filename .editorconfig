; top-most EditorConfig file
root = true

; Unix-style newlines
[*]
end_of_line = LF
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space

[*.php]
indent_style = space
indent_size = 4

[*.{html,twig,js}]
indent_style = space
indent_size = 4

[*.{css,scss}]
indent_style = space
indent_size = 2
